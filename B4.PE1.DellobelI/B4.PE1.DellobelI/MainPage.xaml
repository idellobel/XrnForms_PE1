<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:B4.PE1.DellobelI"
             xmlns:extensions="clr-namespace:B4.PE1.DellobelI.Extensions"
             x:Class="B4.PE1.DellobelI.MainPage"
             Title="Fotogalerij en Wiki"
             Style="{StaticResource PlatformPaddedContentPageStyle}">
    <!--<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" 
                    iOS="20, 40, 20, 20" 
                    Android="20" 
                    WinPhone="20" />
    </ContentPage.Padding>-->
    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
        <Label x:Name="lblWelcome" 
               Text="Welcome to Xamarin Forms!" 
                Style="{DynamicResource CustomTitleStyle}"/>

        <Button Style="{StaticResource DefaultButtonStyle}" x:Name="btnPictureGallery" 
                Text="Go to Picture gallery" 
                Clicked="btnPictureGallery_Clicked" />
        <Button Style="{StaticResource DefaultButtonStyle}" x:Name="btnWiki" 
                Text="Go to Wiki" 
                Clicked="btnWiki_Clicked" />



    </StackLayout>
</ContentPage>